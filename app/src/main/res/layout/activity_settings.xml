<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/applogo" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userNameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="Abdallah Mohamed" />

                        <TextView
                            android:id="@+id/userEmailTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="Abdallah@Hamza.solutions" />

                        <TextView
                            android:textDirection="ltr"
                            android:id="@+id/userNumberTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="01099863590" />


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editProfileBTN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/addAdminBTN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Add Admin"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/editProfileCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="40dp"
                android:elevation="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Edit Your Profile"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter new name"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editNumberET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter new number"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editEmailET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter new email"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editPasswordET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter new password"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editConfirmPasswordET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter confirm password"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />


                    <Button
                        android:id="@+id/confirmBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Confirm"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/addAdminCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="40dp"
                android:elevation="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Add New Admin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/adminNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Admin name"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/adminNumberET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Admin number"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/adminEmailET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Admin email"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/adminPasswordET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Admin password"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/adminConfirmPasswordET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter confirm password"
                        android:textColorHint="@color/black"
                        android:textSize="18sp" />


                    <Button
                        android:id="@+id/addBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Add Admin"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>